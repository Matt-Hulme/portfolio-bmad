#!/usr/bin/env sh

echo "ğŸ” Running pre-push checks..."

# Run the same checks as pre-commit but add build
npm run lint && \
npm run format:check && \
npx tsc --noEmit && \
npm test -- --run && \
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Pre-push checks failed! Push aborted."
  exit 1
fi

echo "âœ… All pre-push checks passed!"
